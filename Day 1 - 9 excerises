######## DAY 2 ########
height = int(input("what is your height?\n"))
bill = 0

if height > 120:
  
  age = int(input("what is your age?\n"))
  
  if age > 18:
    bill = 12
    print(f"Your bill is {bill}")
  elif age >= 12 and age <= 18:
    bill = 7
    print(f"Your bill is {bill}")
  else:
    bill = 5
    print(f"Your bill is {bill}")
  
  want_photo = input('Do you want photo? Y or N\n')
  
  if want_photo == "Y":
    bill += 2
  print(f"you bill is {bill}")

else:
  print("Can't Ride")


